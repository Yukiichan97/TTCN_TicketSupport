    <style>
        .form-control {
            margin-bottom: 15px;
        }

        #captchaImage {
            display: block;
            margin: 10px auto;
            border: 1px solid #ccc;
            padding: 5px;
        }

        .captcha-container {
            text-align: center;
            margin-bottom: 10px;
        }

        .captcha-reload-button {
            display: block;
            margin: 10px auto;
            background-color: #007bff;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
        }

            .captcha-reload-button:hover {
                background-color: #0056b3;
            }
